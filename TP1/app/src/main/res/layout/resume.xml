<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.darksite.tp1.Resume">

    <Button
        android:id="@+id/btnNouveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="13dp"
        android:background="@color/colorAccent"
        android:text="Nouveau sondage"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img2"
        android:layout_toStartOf="@+id/img2"
        android:clickable="true"
        android:onClick="onClick"
        android:text="Resume"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,UnknownIdInLayout"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="15dp"
        android:text="Êtes-vous propriétaire de l’entreprise, ou avez-vous des parts dans l’entreprise que vous représentez?" />

    <TextView
        android:id="@+id/respQuestion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/respQuestion1"
        android:layout_marginTop="16dp"
        android:text="Pensez-vous faire l’acquisition d’une machinerie agricole prochainement? " />

    <TextView
        android:id="@+id/respQuestion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/respQuestion2"
        android:layout_marginTop="19dp"
        android:text="Quelle est la part du budget associé à la machinerie agricole pour votre entreprise?" />

    <TextView
        android:id="@+id/respQuestion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/respQuestion3"
        android:layout_marginTop="20dp"
        android:text="Aimeriez-vous que l’on vous contacte prochainement?" />

    <TextView
        android:id="@+id/respQuestion4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/respQuestion4"
        android:layout_marginTop="24dp"
        android:text="Votre adresse de courriel :" />

    <TextView
        android:id="@+id/respQuestion5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textStyle="bold|italic" />

</RelativeLayout>
