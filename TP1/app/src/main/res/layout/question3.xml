<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.darksite.tp1.Question1">

    <TextView
        android:id="@+id/question3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitreQuestion3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Quelle est la part du budget associé à la machinerie agricole pour votre entreprise?"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtTitreQuestion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:onClick="onClick"
        android:text="Question 3"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,UnknownIdInLayout"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/edtQuestion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/question3"
        android:layout_alignStart="@+id/question3"
        android:layout_below="@+id/question3"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnToQuestion4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtQuestion3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="19dp"
        android:background="@color/colorAccent"
        android:text="Prochaine"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
